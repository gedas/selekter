{
  "name": "selekter",
  "version": "0.1.0",
  "description": "Selection management model for DOM elements",
  "main": "dist/selekter.js",
  "module": "dist/selekter.esm.js",
  "types": "dist/selekter.d.ts",
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "start": "rimraf dist && rollup -cw",
